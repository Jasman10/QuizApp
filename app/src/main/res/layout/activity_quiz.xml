<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Who is the father of modern computer?"
        android:textColor="#2196F3" />

    <RadioGroup 
        android:id="@+id/rd_One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charlie Brown"/>

        <RadioButton
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charles Babbage"/>

        <RadioButton
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Albert Eisntein"/>

        <RadioButton
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rajesh Hamal"/>
    </RadioGroup>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. What does ATM stand for?"
        />

    <RadioGroup
        android:id="@+id/rd_Two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/Re_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Always Time Money"/>

        <RadioButton
            android:id="@+id/Fi_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automatic Timing Machine"/>

        <RadioButton
            android:id="@+id/ATM_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any Time Money"/>

        <RadioButton
            android:id="@+id/File_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automatic Teller Machine"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. What is the capital city of Nepal?"
        />
    <EditText
        android:id="@+id/OS_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Which Operating system does apple computers use"
        />

    <RadioGroup
        android:id="@+id/rd_Three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/MAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAC OS"/>

        <RadioButton
            android:id="@+id/Linux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linux"/>

        <RadioButton
            android:id="@+id/Ubuntu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubuntu"/>

        <RadioButton
            android:id="@+id/Windows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Windows"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. What programming languages can be used in computer?"
        />
    <CheckBox
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C++"
    />
    <CheckBox
        android:id="@+id/Java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        />
    <CheckBox
        android:id="@+id/Python"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python"
        />
    <CheckBox
        android:id="@+id/All_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All of the above"
        />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
</ScrollView>